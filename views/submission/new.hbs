<h2>Add a Pokemon!</h2>

<form action="/pokemon/" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" class="form-control" value="{{this.name}}">
    </div>

    <div class="form-group">
        <label for="img">URL:</label>
        <input type="text" id="img" name="img" class="form-control" value="{{this.img}}">
    </div>

    <input type="submit" value="Update Pokedex" class="btn btn-primary" />
</form>
    <a href="/pokemon" class="btn btn-secondary">Cancel</a>


